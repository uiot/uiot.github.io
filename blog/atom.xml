---
        layout: feed
        ---
        <?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

    <title>Blog of Universal Internet of Things</title>
    <link href="{{ site.globalurl }}/atom.xml" rel="self"/>
    <link href="{{ site.globalurl }}/blog"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{ site.globalurl }}</id>
    <author>
        <name>Universal Internet of Things</name>
        <email>blog@uiot.org</email>
    </author>

    {% for post in site.posts %}
    <entry>
        <title>{{ post.title }}</title>
        <link href="{{ site.globalurl }}{{ post.url }}"/>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>{{ site.globalurl }}{{ post.id }}</id>
        <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
    {% endfor %}
</feed>
